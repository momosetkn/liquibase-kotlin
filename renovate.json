{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "configMigration": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "Kotlin & KSP",
      "matchManagers": [
        "gradle"
      ],
      "matchPackageNames": [
        "/org.jetbrains.kotlin/",
        "/com.google.devtools.ksp/"
      ]
    }
  ]
}
